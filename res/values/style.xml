<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.FullScreen" parent="android:Theme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="myBackgroundStyle" parent="android:Theme">
        <item name="android:background">#88000000</item>
        <!-- <item name="android:textSize">6pt</item> -->
    </style>

    <style name="Theme.menu" parent="android:Theme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <!-- <item name="android:textSize">6pt</item> -->

    </style>

    <style name="Theme.padding" parent="android:Theme">
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <!-- <item name="android:textSize">6pt</item> -->
    </style>

    <style name="Theme.txtpadding" parent="android:Theme">

        <!-- <item name="android:textSize">6pt</item> -->
        <item name="android:paddingTop">5dp</item>
        <item name="android:textColor">#69D2E7</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="Theme.txtTheme" parent="android:Theme">
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <!-- <item name="android:textSize">6pt</item> -->
        <item name="android:gravity">left</item>
    </style>

    <style name="Theme.bottompadding" parent="android:Theme">
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <!-- <item name="android:textSize">6pt</item> -->
    </style>

</resources>